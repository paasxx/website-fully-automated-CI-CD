# Etapa 1: Build do React
FROM node:16 as builder

WORKDIR /app

# Copia os arquivos do projeto React
COPY front/ /app

# Instala dependências
RUN npm install --silent
RUN npm install axios --silent
RUN npm rebuild node-sass --silent

# Passa variável para o build do React
ARG REACT_APP_BACKEND_URL
ENV REACT_APP_BACKEND_URL=$REACT_APP_BACKEND_URL

# Build do React (vai embutir o REACT_APP_BACKEND_URL no código)
RUN npm run build


# Etapa 2: Nginx + substituição da conf
FROM nginx:latest

# Instala envsubst
RUN apt-get update && apt-get install -y gettext-base

# Copia e prepara template do nginx.conf
COPY nginx.conf /etc/nginx/templates/nginx.conf.template

# ENV precisa de valor inicial (evita erro)
ENV REACT_APP_BACKEND_URL=http://localhost/api

# Substituição via envsubst
RUN envsubst '${REACT_APP_BACKEND_URL}' < /etc/nginx/templates/nginx.conf.template > /etc/nginx/conf.d/default.conf

# Copia build do React
COPY --from=builder /app/build /usr/share/nginx/html

# Inicia nginx
CMD ["nginx", "-g", "daemon off;"]